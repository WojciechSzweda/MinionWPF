<Window x:Class="Minion.MinionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minion"
        mc:Ignorable="d"
        Title="MainWindow" Height="64" Width="64"
        WindowStyle="None"
        Background="Transparent" AllowsTransparency="True" ResizeMode="NoResize" ShowInTaskbar="False"
        MouseDown="Window_MouseDown"
        Topmost="True" Closed="Window_Closed"
        >
    <Grid>
        <Image Name="charImage" Source="spritesheet.png" Width="832" Height="1344" RenderTransformOrigin="0.5,0.5" Margin="0,0,-500,-1280">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="-1280"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
